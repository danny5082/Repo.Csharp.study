@model WebAppTagHelpers_forms01.Models.Student
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="container">

    <div class="col-sm-4">
        <form method="get">
            <label asp-for="NAME">이름</label> 
            <input asp-for="NAME" placeholder="이름을 입력하세요" class="form-control"/>
            <br />
            <label asp-for="NAME">성별</label>
            <select asp-for="Gender" class="form-select"
            asp-items="Html.GetEnumSelectList<Gender>()">
                <option value="">성별을 입력하세요</option>

            </select>
            <br />
            <label asp-for="AGE">나이</label>
            <input asp-for="NAME" placeholder="나이를 입력하세요" class="form-control" />
            <br />
            <label asp-for="HP">전화번호</label>
            <input asp-for="NAME" placeholder="전화번호를 입력하세요" class="form-control" />
            <br />
            <label>취업여부</label>
            <div class="form-check">
                <input class="form-check-input" type="radio" asp-for =IsEmployed value="취업중">
                <label class="form-check-label" for="flexRadioDefault1">
                    취업중
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" asp-for=IsEmployed value="미취업" checked>
                <label class="form-check-label" for="flexRadioDefault2">
                    미취업
                </label>
                <textarea asp-for="Description" 
                rows="5" class="form-control">
                
            </textarea>
            </div>
            <br />

            <button type="button" class="btn btn-success">OK</button>
           
        </form>
    </div>
</div>